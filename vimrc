set nocompatible                    " Disable vi compatiblity mode
set background=dark                 " For dark backgrounds
syntax enable                       " Show syntax highlighting
set showcmd		                    " Show (partial) command in status line.
set showmatch		                " Show matching brackets.
set ignorecase		                " Do case insensitive matching
set smartcase		                " Do smart case matching
set incsearch		                " Incremental search
set autowrite		                " Automatically save before commands like :next and :make
set hidden		                    " Hide buffers when they are abandoned
set mouse=a		                    " Enable mouse usage (all modes)
set number		                    " Show absolute line number for current line
set autoread		                " Set to auto read when a file is change from the outside
set ruler		                    " Show current position
set backspace=eol,start,indent      " Fix backspace
set whichwrap+=<,>,h,l	            " Wrap lines on keys
set incsearch                       " Hightlight as you search
set hlsearch		                " Highlight search results
set expandtab		                " Spaces instead of tabs
set smarttab		                " Smart tab
set shiftwidth=4	                " Tab spacing
set tabstop=4		                " Tab spacing
set shiftround                      " Indent to nearest tab stop
set autoindent		                " Auto indent
set smartindent		                " Smart indent
set wrap		                    " Wrap lines
set listchars=tab:>-,nbsp:_,trail:. " Show characters for white space 
set list                            " Enable the listchars
